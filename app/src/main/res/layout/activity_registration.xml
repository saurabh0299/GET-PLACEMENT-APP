<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".registration">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@drawable/pl" />

  <View
      android:id="@+id/bg1"
      android:layout_width="match_parent"
      android:layout_height="500dp"
      android:layout_marginTop="60dp"

      android:background="#BE000000" />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:textSize="30dp"
      android:layout_marginLeft="70dp"
      android:text="REGISTRATION"
      android:id="@+id/r1"
      android:layout_marginTop="70dp"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="500dp"

      android:layout_marginTop="60dp"

      android:background="@drawable/inputlogincolor"

      />

  <EditText
      android:id="@+id/r2"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_below="@+id/r1"
      android:layout_marginLeft="49dp"
      android:layout_marginTop="12dp"
      android:layout_marginRight="40dp"
      android:background="@drawable/inputlogincolor"
      android:hint="FullName"
      android:paddingLeft="20dp"
      android:textColor="@color/white"
      android:textColorHint="#8F8F8F"
      android:textSize="25dp" />

  <EditText
      android:id="@+id/r3"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_below="@+id/r2"
      android:layout_marginLeft="49dp"
      android:layout_marginTop="12dp"
      android:layout_marginRight="40dp"
      android:background="@drawable/inputlogincolor"
      android:hint="Email-Id"
      android:paddingLeft="20dp"
      android:textColor="@color/white"
      android:textColorHint="#8F8F8F"
      android:textSize="25dp" />

  <EditText
      android:id="@+id/r4"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_below="@+id/r3"
      android:layout_marginLeft="49dp"
      android:layout_marginTop="12dp"
      android:layout_marginRight="40dp"
      android:background="@drawable/inputlogincolor"

      android:hint="Mobile No"
      android:paddingLeft="20dp"
      android:textColor="@color/white"
      android:textColorHint="#8F8F8F"
      android:textSize="25dp" />

  <EditText
      android:id="@+id/r5"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_below="@+id/r4"
      android:layout_marginLeft="49dp"
      android:layout_marginTop="12dp"
      android:layout_marginRight="40dp"
      android:background="@drawable/inputlogincolor"
      android:hint="Password "
      android:paddingLeft="20dp"
      android:textColor="@color/white"
      android:textColorHint="#8F8F8F"
      android:textSize="25dp" />

  <EditText
      android:id="@+id/r6"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_below="@+id/r5"

      android:layout_marginLeft="49dp"
      android:layout_marginTop="12dp"
      android:layout_marginRight="40dp"
      android:background="@drawable/inputlogincolor"
      android:hint="RE- Password"
      android:paddingLeft="20dp"
      android:textColor="@color/white"
      android:textColorHint="#8F8F8F"
      android:textSize="25dp" />


  <Button
      android:id="@+id/r7"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_below="@+id/r6"
      android:layout_marginLeft="49dp"

      android:layout_marginTop="20dp"
      android:layout_marginRight="40dp"
      android:background="@drawable/rbuttoncolor"
      android:onClick="registrationbuttonclick"
      android:text="REGISTRATION"
      android:textSize="29dp"
      android:textStyle="bold" />

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="170dp"
      android:layout_below="@+id/bg1"
      android:background="@drawable/pl2" />



  </RelativeLayout>